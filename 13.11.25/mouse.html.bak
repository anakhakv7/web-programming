<html>
<head>
<title>Changing Image and Text</title>
<style>
img {
  width: 300px;           
  height: 300px;         
  border: 2px solid grey;
  border-radius: 50%;
  padding: 5px;
}

#p1 {
  position: relative;
  top: 20px;             
  left: 10px;
  font-size: 20px;
  color: orange;
}
</style>

<script>
function one() {
  document.getElementById("img").src = "img3.jpg"; 
  document.getElementById("p1").innerHTML = "onmouseover";
  document.getElementById("p1").style.color = "violet";
}

function two() {
  document.getElementById("img").src = "img2.jpg"; 
  document.getElementById("p1").innerHTML = "onmouseout";
  document.getElementById("p1").style.color = "red";
}
</script>
</head>

<body>
  <img src="img1.jpg" id="img" onmouseover="one()" onmouseout="two()">
  <b><p id="p1">onmouseout</p></b>
</body>
</html>
